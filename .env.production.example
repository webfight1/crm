APP_NAME="Your CRM"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://your-domain.com

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=crm-mysql
DB_PORT=3306
DB_DATABASE=crm
DB_USERNAME=laravel
DB_PASSWORD=your_secure_db_password

# External database for company search
EXTERNAL_DB_DRIVER=mysql
EXTERNAL_DB_HOST=crm-mysql
EXTERNAL_DB_PORT=3306
EXTERNAL_DB_DATABASE=ettevotted
EXTERNAL_DB_USERNAME=laravel
EXTERNAL_DB_PASSWORD=your_secure_db_password

# Email settings
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Zone Email API
ZONE_EMAIL_API_URL=https://webfight.ee/zone-api/email_sender_api.php
ZONE_EMAIL_API_TOKEN=YOUR_ZONE_EMAIL_API_TOKEN

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file

# Queue
QUEUE_CONNECTION=sync

# Redis
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Email cooldown period in days
EMAIL_COOLDOWN_DAYS=14

# Security
SESSION_SECURE_COOKIE=true
APP_FORCE_HTTPS=false

# Debug
DEBUGBAR_ENABLED=false
